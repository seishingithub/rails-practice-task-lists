<!DOCTYPE html>
<html>
<head>
  <title>Rails Practice</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
<header>
  <div class="container">
    <div class="logo">
      <%= link_to "Rails Practice", root_path %>
    </div>
    <% if current_user %>
      <div class="logout">
        <%= current_user.email %> |
        <%= link_to "Logout", signout_path %>
      </div>
    <% end %>
  </div>
</header>
<main>
  <div class="container">
    <% if flash[:error] %>
      <div class="notice_error"><%= flash[:error] %></div>
    <% end %>
    <% if flash[:notice] %>
      <p class="notice_successful">Task was created successfully!</p>
    <% end %>
    <%= yield %>
  </div>
</main>
</body>
</html>
